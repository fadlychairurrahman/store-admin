<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Kelola Stok Produk</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <div class="container mt-5">

    <h2 class="mb-4 text-center">üìä Kelola Stok Produk</h2>

    <!-- Form Tambah / Edit Stok -->
    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <h5 class="card-title mb-3">
          <%= editData ? '‚úèÔ∏è Edit Stok Produk' : '‚ûï Tambah Stok Baru' %>
        </h5>

        <form action="/stok/simpan" method="POST">
          <input type="hidden" name="id" value="<%= editData ? editData.id : '' %>">

          <div class="row g-3 align-items-center">
            <!-- Pilih Produk -->
            <div class="col-md-5">
              <label class="form-label">Produk</label>
              <select name="id_produk" class="form-select" required>
                <option value="">-- Pilih Produk --</option>
                <% if (produk && produk.length > 0) { %>
                  <% produk.forEach(p => { %>
                    <option value="<%= p.id %>" 
                      <%= editData && editData.id_produk === p.id ? 'selected' : '' %>>
                      <%= p.nama_produk %>
                    </option>
                  <% }) %>
                <% } else { %>
                  <option disabled>Tidak ada produk tersedia</option>
                <% } %>
              </select>
            </div>

            <!-- Input Jumlah -->
            <div class="col-md-5">
              <label class="form-label">Jumlah Stok</label>
              <input type="number" name="jumlah" placeholder="Masukkan jumlah stok" class="form-control" required 
                     value="<%= editData ? editData.jumlah : '' %>">
            </div>

            <!-- Tombol -->
            <div class="col-md-2 d-grid">
              <label class="form-label">&nbsp;</label>
              <button type="submit" class="btn btn-<%= editData ? 'warning' : 'primary' %>">
                <%= editData ? 'Update' : 'Tambah' %>
              </button>
            </div>
          </div>
        </form>

        <% if (editData) { %>
          <div class="mt-3">
            <a href="/stok" class="btn btn-secondary btn-sm">‚ùå Batal Edit</a>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Tabel Data Stok -->
    <div class="card shadow-sm">
      <div class="card-body">
        <h5 class="card-title mb-3">üìã Daftar Stok Produk</h5>

        <table class="table table-bordered table-striped align-middle">
          <thead class="table-dark">
            <tr>
              <th class="text-center" style="width: 60px;">ID</th>
              <th>Nama Produk</th>
              <th class="text-center" style="width: 150px;">Jumlah Stok</th>
              <th class="text-center" style="width: 180px;">Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% if (stok && stok.length > 0) { %>
              <% stok.forEach(s => { %>
                <tr>
                  <td class="text-center"><%= s.id %></td>
                  <td><%= s.nama_produk %></td>
                  <td class="text-center"><%= s.jumlah %></td>
                  <td class="text-center">
                    <a href="/stok/edit/<%= s.id %>" class="btn btn-sm btn-warning me-1">Edit</a>
                    <a href="/stok/hapus/<%= s.id %>" 
                       class="btn btn-sm btn-danger"
                       onclick="return confirm('Yakin ingin menghapus stok ini?')">
                      Hapus
                    </a>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="4" class="text-center">Belum ada data stok.</td>
              </tr>
            <% } %>
          </tbody>
        </table>

        <a href="/" class="btn btn-secondary mt-3">‚¨Ö Kembali</a>
      </div>
    </div>

  </div>
</body>
</html>
